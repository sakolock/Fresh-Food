<div class="container">
  <div class="row">
      <ul class="nav nav-tabs nav-justified" role="nav">
        <li role="presentation" class="primary-bg active"><a href="#all" aria-controls="all" role="tab" data-toggle="tab"><i class="fa fa-cutlery"></i> All Food</a></li>
        <li role="presentation" class="expiring-soon"><a href="#expiring" aria-controls="all" role="tab" data-toggle="tab"><i class="fa fa-exclamation-triangle"></i> Expiring Soon</a></li>         
        <li role="presentation" class="donate"><a href="#donate-food" aria-controls="all" role="tab" data-toggle="tab"><i class="fa fa-shopping-basket"></i> Donate Food</a></li>
      </ul>
  </div>

      <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="all">
      <div class="col-xs-12">
<!--         <div class="row">
            <div class="col-xs-4">
                <h2>Food</h2>
            </div>
            <div class="col-xs-4">
                <h2>Category</h2>
