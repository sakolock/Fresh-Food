<div class="container">
<div class="col-sm-12">
<div class="row">
<div class="col-sm-6">
<h2>Login, Partner!</h2>
<form action="/users/signin" method="post">
	<div class="row">
		<div class="col-sm-6">
			<label for="username">Username: </label>
		</div>
		<div class="col-sm-6">
			<input type="text" name="username" id="username" value="<%= params[:username].to_s %>">
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">	
			<label for="password">Password:  </label>
		</div>
		<div class="col-sm-6">
			<input type="password" name="password" id="password">
		</div>
	</div>
	<button type="submit">Sign in</button>
</form>
</div>
<div class="col-sm-6">
<h2>Create a Login, Partner!</h2>
<form action="/users/register" method="post">
	<div class="row">
		<div class="col-sm-6">
			<label for="username">Username: </label>
		</div>
		<div class="col-sm-6">
			<input type="text" name="username" id="username" value="<%= params[:username].to_s %>">
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">	
			<label for="password">Password:  </label>
		</div>
		<div class="col-sm-6">
			<input type="password" name="password" id="password">
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6">	
			<label for="confirm">Confirm Password:  </label>
		</div>
		<div class="col-sm-6">
			<input type="password" name="confirm" id="confirm">
		</div>
	</div>	
	<button type="submit">Sign up</button>
</form>
</div>
</div>
</div>
</div>